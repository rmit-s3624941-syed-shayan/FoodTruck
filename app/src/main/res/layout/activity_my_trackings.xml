    <Button
        android:id="@+id/mainmenuMT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:text="Main Menu"

        />
</RelativeLayout>