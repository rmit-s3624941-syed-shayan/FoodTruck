    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddTrackingActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_list_recycler"
        android:layout_width="match_parent"
